<div>
    <h1>Real Time products</h1>
    <div class="real-time-form">
        <form id="formProducts" method="post" action="/realtimeproducts">
            <label for="productTitle">Titulo:</label>
            <input type="text" placeholder="Titulo del producto" name="title" id="productTitle" />
            <label for="productDescription">Descripcion:</label>
            <textarea type="text" rows="10" placeholder="Descripcion del producto" name="description"
                id="productDescription"></textarea>
            <label for="productCategory">Categoría producto: </label>
            <input type="text" placeholder="Categoría del producto" name="category" id="productCategory">
            <label for="productPrice">Precio: </label>
            <input type="number" placeholder="Precio del producto" name="price" id="productPrice">
            <label for="productCode">Codigo Producto</label>
            <input type="text" placeholder="Codigo del producto" name="code" id="productCode">
            <label for="productStock">Stock:</label>
            <input type="number" placeholder="cantidad en stock" name="stock" id="productStock">
            <label for="productThumbnails">Imagenes:</label>
            <input type="text" placeholder="URL de la imagen" name="thumbnails" id="productThumbnails">
            <button type="submit">Agregar</button>
        </form>
    </div>
    <div class="list">
        <ul id="productsList">
            {{#each products}}
            <li>
                <div class="info">
                    <h2>
                        {{prop this 'title'}}
                    </h2>
                    <div class="description-category">
                        <p><span>Description:</span> {{prop this 'description'}}</p>
                        <p><span>Category:</span> {{prop this 'category'}}</p>
                    </div>
                    <div class="price-stock">
                        <p><span>Price:</span> ${{prop this 'price'}}</p>
                        <p><span>Stock:</span> {{prop this 'stock'}}</p>
                    </div>
                </div>
                <div class="thumbnails">
                    {{#each (prop this 'thumbnails')}}
                        <img src="{{this}}" alt="{{prop ../this 'title'}}">
                    {{/each}}
                </div>
                <button class="deleteButton" id={{prop this '_id'}}>Eliminar</button>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>{{!-- /script de socket para poder utilizarlo del lado del cliente. --}}
<script src="./js/script.js"></script>